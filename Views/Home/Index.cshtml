@model IEnumerable<EuphoriaShop.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@foreach (var item in Model) 
{

    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="@Url.Content(item.ProductImgPreview)" style="background-image&quot;);">
                <ul class="featured__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a asp-controller="Home" asp-action="ChiTietSanPham" asp-route-maSp="@item.ProductId">@Html.DisplayFor(modelItem => item.ProductName)</a></h6>
                <h5>@Html.DisplayFor(modelItem => item.PricePreview)</h5>
            </div>
        </div>
    </div>

}
<div class="banner">
    <div class="container">
        <div class="row" style="padding-bottom: 20px">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="../images/banner/banner-1.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="../images/banner/banner-2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>