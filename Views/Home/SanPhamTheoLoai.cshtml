@*@model IEnumerable<EuphoriaShop.Models.Product>*@
@model List<Product>
@{
    ViewData["Title"] = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="@Url.Content(item.ProductImgPreview)" style="background-image&quot;);">
                <ul class="featured__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a href="#">@Html.DisplayFor(modelItem => item.ProductName)</a></h6>
                <h5>@Html.DisplayFor(modelItem => item.PricePreview)</h5>
            </div>
        </div>
    </div>
}

